{
  "name": "ALEX-STACK Custom Agents Environment",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",

  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    },
    "ghcr.io/anthropics/devcontainer-features/claude-code:1": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "anthropic.claude-code"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },

  "remoteEnv": {
    "JINA_API_KEY": "${localEnv:JINA_API_KEY}",
    "NOTION_API_TOKEN": "${localEnv:NOTION_API_TOKEN}"
  },

  "postCreateCommand": "npm install -g @devcontainers/cli",

  "forwardPorts": [3000, 5173, 8080],

  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.claude,target=/home/vscode/.claude,type=bind,consistency=cached"
  ]
}
